<odoo>
    <record id="view_facture_mail_wizard" model="ir.ui.view">
        <field name="name">facture.mail.wizard.form</field>
        <field name="model">gestion.facture.mail.wizard</field>
        <field name="arch" type="xml">
            <form string="Prévisualisation Email">
                <sheet>
                    <group>
                        <field name="email_from"/>
                        <field name="email_to"/>
                        <field name="subject"/>
                        <field name="body_html" readonly="1"/>
                    </group>
                    <footer>
                        <button string="Envoyer Email" type="object" name="action_envoyer_mail" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_facture_tree" model="ir.ui.view">
        <field name="name">gestion.facture.tree</field>
        <field name="model">gestion.facture</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="client_id"/>
                <field name="date_facture"/>
                <field name="montant_total"/>
                <button name="action_preview_mail"
                        string="Prévisualiser Email"
                        type="object"
                        class="btn-primary"/>
            </tree>
        </field>
    </record>

</odoo>
