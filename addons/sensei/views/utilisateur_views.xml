<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_utilisateur_tree" model="ir.ui.view">
        <field name="name">gestion.utilisateur.tree</field>
        <field name="model">gestion.utilisateur</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="role"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_utilisateur_form" model="ir.ui.view">
        <field name="name">gestion.utilisateur.form</field>
        <field name="model">gestion.utilisateur</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="role"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="address"/>
                        <field name="specialty"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_utilisateur_search" model="ir.ui.view">
    <field name="name">gestion.utilisateur.search</field>
    <field name="model">gestion.utilisateur</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="email"/>
            <field name="phone"/>
            <field name="role"/>
            <filter name="coach" string="Coach" domain="[('role', '=', 'coach')]"/>
            <filter name="consultant" string="Consultant" domain="[('role', '=', 'consultant')]"/>
            <filter name="psychologue" string="Psychologue" domain="[('role', '=', 'psychologue')]"/>
        </search>
    </field>
</record>

</odoo>
