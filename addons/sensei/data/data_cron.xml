<odoo>
    <data noupdate="1">
        <record id="ir_cron_update_sessions_terminees" model="ir.cron">
            <field name="name">Mise à jour séances terminées</field>
            <field name="model_id" ref="model_gestion_session"/>
            <field name="state">code</field>
            <field name="code">model.update_sessions_terminees()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>

    <record id="ir_cron_generer_factures" model="ir.cron">
        <field name="name">Génération automatique des factures</field>
        <field name="model_id" ref="model_gestion_facture"/>
        <field name="state">code</field>
        <field name="code">model.generer_factures()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="nextcall">2025-08-21 00:00:00</field>
    </record>
</odoo>
